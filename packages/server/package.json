{
  "name": "@monitor/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn run dev",
    "dev": "yarn run dev:nodemon",
    "dev:nodemon": "nodemon --config nodemon.json",
    "dev:node": "node dist/server.js",
    "build": "babel --root-mode upward --no-comments -d dist src/",
    "heroku-postbuild": "yarn --production=false && yarn workspaces run build",
    "postinstall": "yarn run build",
    "lint": "eslint --ext js src/",
    "lint:fix": "eslint --fix --ext js src/"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "react-grid-system": "^4.4.3",
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10"
  }
}
